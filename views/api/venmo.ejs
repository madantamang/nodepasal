<h3>Venmo Profile</h3>
<div class="row">
  <div class="col-sm-2"><img src="{profile.user.profile_picture_url}"/></div>
  <div class="col-sm-8">
    <div class="row">
      <div class="col-sm-6"><strong> {profile.user.display_name}</strong>
        <div>Balance:<strong> ${profile.balance}</strong></div>
        <div>Friends:<strong> {profile.user.friends_count}</strong></div>
      </div>
      <div class="col-sm-6">
        <div>Email:<strong> {profile.user.email}</strong></div>
        <div>Phone:<strong> {profile.user.phone}</strong></div>
        <div>ID:<strong> {profile.user.id}</strong></div>
      </div>
    </div>
    <p>{profile.user.about}</p>
  </div>
</div>
<div class="row">
  <div class="col-sm-5">
    <h3>Make Payment</h3>
    <form role="form" method="POST">
      <input type="hidden" name="_csrf"/>
      <div class="form-group">
        <label for="user" class="control-label">Phone, Email or Venmo User ID</label>
        <input type="text" name="user" id="user" placeholder="15555555555" autofocus="autofocus" class="form-control"/>
      </div>
      <div class="form-group">
        <label for="note" class="control-label">Note</label>
        <input type="text" name="note" id="note" placeholder="A message to accompany the payment." class="form-control"/>
      </div>
      <div class="form-group">
        <label for="amount" class="control-label">Amount</label>
        <input type="text" name="amount" id="amount" placeholder="0.10" class="form-control"/>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary"><i class="fa fa-usd"></i>Send</button>
      </div>
    </form>
  </div>
</div>
